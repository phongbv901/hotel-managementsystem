@model HotelManagement.Models.LogOnModel

<div class="btn-group pull-right">     
@if (Request.IsAuthenticated)
{
    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#logout">
        <i class="icon-user"></i>
       Xin chào <strong>@User.Identity.Name</strong>
        <span class="caret"></span>
    </a>
    <ul class="dropdown-menu">
        <li>@Html.ActionLink(@"Đổi mật khẩu", "ChangePassword", "Account")</li>
        <li>@Html.ActionLink(@"Thoát", "LogOff", "Account")</li>
    </ul>
}
else
{ 
    
    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#login">
    <i class="icon-user">
    </i>Login <span class="caret"></span></a>
    <div class="dropdown-menu">
        <script src="/Scripts/jquery.validate.min.js" type="text/javascript"></script>
        <script src="/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
        <form action="/Account/LogOn"  method="post">
        <div class="login-form clearfix">
            <legend>Account</legend>
            <fieldset class="clearfix">
                <div class="editor-field clearfix">
                @Html.TextBoxFor(m => m.UserName, new Dictionary<string, object> {
                                        {"class","input-medium"},{"data-val",true},{"data-val-required","The User name field is required."},
                                        {"id=","UserName"},{"name","UserName"},{"placeholder","Username"}})
                  @Html.ValidationMessageFor(m => m.UserName)
                </div>
                <div class="editor-field clearfix">
                    @Html.PasswordFor(m => m.Password, new Dictionary<string, object>{
                                    {"class","input-medium"},{"data-val","true"},{"data-val-required","The Password field is required."},
                                    {"id","Password"},{"name","Password"},{"placeholder","Password"}})
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <div class="editor-label checkbox clearfix">
                    @Html.CheckBoxFor(m => m.RememberMe, new Dictionary<string, object>{
                        {"data-val","true"},{"data-val-required","The Remember me? field is required."},{"id","RememberMe"},
                        {"name","RememberMe"} 
                        })
                    <label for="RememberMe">Remember me?</label>
                </div>
                <p>
                    <input type="submit" class="btn btn-primary" value="Login" />
                </p>
            </fieldset>
        </div>
        </form>
    </div>
    <script language="javascript"  type="text/javascript">
            $('.dropdown-toggle').dropdown();
        $('.dropdown-menu').find('form').click(function (e) {
            e.stopPropagation();
        });
    </script>


    
}  

</div>


